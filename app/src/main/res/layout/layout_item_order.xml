<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="8dp"
    android:background="@color/btn_edit_text">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn hàng số: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_marginVertical="2dp"
        android:id="@+id/tvIdOrder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="22sp"
            android:id="@+id/tvUsernameInOrder"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2003"
            android:textSize="20sp"
            android:id="@+id/tvDateOrder"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvProductInOrder"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvAllProductInOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 sản phẩm"
            android:textSize="18sp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền:"
            android:paddingRight="8dp"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.000đ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:id="@+id/tvAllPriceOrder"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvStatusOrder"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang giao hàng"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnChangeStatusOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật trạng thái"
            android:background="@drawable/custom_btn_bg_yellow"
            app:backgroundTint="@null"/>
    </LinearLayout>
</LinearLayout>